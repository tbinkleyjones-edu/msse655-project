<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="OneLineTextViewWithEllipses" parent="@android:style/Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TwoLineTextViewWithEllipses" parent="@android:style/Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="FiveLineTextViewWithScrollbars" parent="@android:style/Widget.TextView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="MediumLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <!-- Styles used by TypeOfMediaView -->
    <style name="TypeOfMediaView">
        <item name="android:textAppearance">@style/TypeOfMediaView.TextAppearance</item>
        <item name="android:padding">15sp</item>
    </style>

    <style name="TypeOfMediaView.TextAppearance">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TypeOfMediaView.TextAppearance.Magazine">
        <item name="android:textColor">@color/color_magazine</item>
    </style>

    <style name="TypeOfMediaView.TextAppearance.Journal">
        <item name="android:textColor">@color/color_journal</item>
    </style>

    <style name="TypeOfMediaView.TextAppearance.Book">
        <item name="android:textColor">@color/color_book</item>
    </style>

    <style name="TypeOfMediaView.TextAppearance.Website">
        <item name="android:textColor">@color/color_website</item>
    </style>

    <style name="TypeOfMediaView.TextAppearance.Other">
        <item name="android:textColor">@color/color_other</item>
    </style>

</resources>
