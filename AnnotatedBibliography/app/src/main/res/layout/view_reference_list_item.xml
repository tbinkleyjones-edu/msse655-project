<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <edu.regis.msse655.annotatedbibliography.components.TypeOfMediaView
        android:id="@+id/textViewFaIcon"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/icon_other"
        style="@style/TypeOfMediaView"
        android:textAppearance="@style/TypeOfMediaView.TextAppearance"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--reference title--"
            style="@style/TwoLineTextViewWithEllipses"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/textViewAuthors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-- authors --"
            style="@style/OneLineTextViewWithEllipses"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>
</LinearLayout>
